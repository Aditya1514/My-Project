@model WebApplication10.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Details</h2>

<table class=" table">
    <tr>
        <th>ProductID</th>
        <td>@Model.ProductID</td>
    </tr>
    <tr>
        <th>ProductName</th>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th>DateOfPurchase</th>
        <td>@Model.DateOfPurchase.Value.ToString("d/M/yyyy")</td>
    </tr>
    <tr>
        <th>CategoryID</th>
        <td>@Model.CategoryID</td>
    </tr>
    <tr>
        <th>BrandID</th>
        <td>@Model.BrandID</td>
    </tr>
</table>
<a href="/Product/index">Back to Products</a>
