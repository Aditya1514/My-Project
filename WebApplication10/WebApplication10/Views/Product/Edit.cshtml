@model WebApplication10.Models.Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Edit Product</h2>
<form action="/Product/Edit/@Model.ProductID" method="post">
    <div class="row">
        <div class="form-group col-6">
            <label for="ProductID">ProductID</label>
            <input type="hidden" name="ProductID" value="@Model.ProductID"/>
            <input type="text" class="form-control" placeholder="Product ID" id="ProductID" name="ProductID" value="@Model.ProductID" />
        </div><br />
              <div class="form-group col-6">
                  <label for="ProductName">ProductName</label>
                
                  <input type="text" class="form-control" placeholder="Product Name" id="ProductName" name="ProductName"value="@Model.ProductName" />
              </div><br />

                    <div class="form-group col-6">
                        <label for="Price">Price</label>
                        <input type="text" class="form-control" placeholder="Price" id="Price" name="Price" value="@Model.Price" />
                    </div><br />
                          <div class="form-group col-6">
                              <label for="DateOfPurchase">DateOfPurchase</label>
                              <input type="date" class="form-control" placeholder="DateOfPurchase" id="DateOfPurchase" name="DateOfPurchase" value="@Model.DateOfPurchase.Value.ToString("d/M/yyyy")" />
                          </div><br />

                   <div class="form-group col-6">
                     <label for="CategoryID">CategoryID</label>
                                    <input type="number" class="form-control" placeholder="CategoryID" id="CategoryID" name="CategoryID" value="@Model.CategoryID" />
                  </div><br />
                        <div class="form-group col-6">
                            <label for="BrandID">BrandID</label>
                            <input type="number" class="form-control" placeholder="BrandID" id="BrandID" name="BrandID" value="@Model.BrandID" />
                        </div><br />
    </div>
    <br />

    <button type="submit" class="btn btn-success">Save</button>
    <a class="btn btn-danger" href="/Product/index">Cancel</a>
</form>


