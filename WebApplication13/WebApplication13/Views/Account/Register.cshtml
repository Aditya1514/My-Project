@model WebApplication13.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Register</h2>

@using (Html.BeginForm("Register","Account",FormMethod.Post))
{
<div class="row">
    <div class="form-group col-6">
        @Html.LabelFor(temp => temp.UserName)
        @Html.TextAreaFor(temp => temp.UserName, new { placeholder = "UserName", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.UserName)
    </div>
    <div class="form-group col-6">
        @Html.LabelFor(temp => temp.Password)
        @Html.PasswordFor(temp => temp.Password, new { placeholder = "Password", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Password)
    </div>
    <div class="form-group col-6">
        @Html.LabelFor(temp => temp.ConfirmPassword)
        @Html.PasswordFor(temp => temp.ConfirmPassword, new { placeholder = "ConfirmPassword", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.ConfirmPassword)
    </div>
    <div class="form-group col-6">
        @Html.LabelFor(temp => temp.Email)
        @Html.TextAreaFor(temp => temp.Email, new { placeholder = "Email", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Email)
    </div>
    <div class="form-group col-6">
        @Html.LabelFor(temp => temp.Mobile)
        @Html.TextAreaFor(temp => temp.Mobile, new { placeholder = "Mobile", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Mobile)
    </div>
    <div class="form-group col-6">
        @Html.LabelFor(temp => temp.DateOfBirth)
        @Html.TextAreaFor(temp => temp.DateOfBirth, new { placeholder = "DateOfBirth", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.DateOfBirth)
    </div>
    <div class="form-group col-12">
        @Html.LabelFor(temp => temp.Address)
        @Html.TextAreaFor(temp => temp.Address, new { placeholder = "Address", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Address)
    </div>
    <div class="form-group col-6">
        @Html.LabelFor(temp => temp.City)
        @Html.TextAreaFor(temp => temp.City, new { placeholder = "City", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.City)
    </div>
    <div class="form-group col-6">
        @Html.LabelFor(temp => temp.Country)
        @Html.TextAreaFor(temp => temp.Country, new { placeholder = "Country", @class = "form-control" })
        @Html.ValidationMessageFor(temp => temp.Country)
    </div>
    
</div>
<br />
<button type="submit" class="btn btn-success">Register</button>
 }

